<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="wg">
        <createTable tableName="t_event">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="create_time" type="timestamp"/>
            <column name="update_time" type="timestamp"/>  
            <column name="guid" type="varchar(68)"/>
            <column name="type" type="varchar(20)"/>
            <column name="url" type="varchar(1024)"/>
            <column name="module" type="varchar(64)"/>
            <column name="time" type="timestamp"/>
        </createTable>
    </changeSet>
    
    <changeSet id="2" author="wg">
        <createTable tableName="t_visit">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="create_time" type="timestamp"/>
            <column name="update_time" type="timestamp"/>  
            <column name="guid" type="varchar(68)"/>
            <column name="time" type="timestamp"/>
            <column name="redirect" type="bigint"/>
            <column name="white_screen" type="bigint"/>
            <column name="dom" type="bigint"/>
            <column name="load" type="bigint"/>
            <column name="unload" type="bigint"/>
            <column name="request" type="bigint"/>
            <column name="user_name" type="varchar(64)"/>
            <column name="width" type="bigint"/>
            <column name="height" type="bigint"/>
            <column name="browser" type="varchar(16)"/>
            <column name="os" type="varchar(16)"/>
            <column name="language" type="varchar(16)"/>
            <column name="duration" type="bigint"/>
        </createTable>
    </changeSet>
    
    <changeSet id="3" author="wg">
        <createTable tableName="t_error">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="create_time" type="timestamp"/>
            <column name="update_time" type="timestamp"/>  
            <column name="guid" type="varchar(68)"/>
            <column name="time" type="timestamp"/>
            <column name="type" type="varchar(16)"/>
            <column name="row_num" type="bigint"/>
            <column name="col_num" type="bigint"/>
            <column name="msg" type="varchar(1024)"/>
            <column name="url" type="varchar(1024)"/>
        </createTable>
    </changeSet>
    
    
    <changeSet id="4" author="wg">
        <addColumn tableName="t_visit">
            <column name="url" type="varchar(1024)"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="5" author="wg">
        <addColumn tableName="t_visit">
            <column name="total" type="bigint"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="6" author="wg">
        <createTable tableName="t_count"> 
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="create_time" type="timestamp"/>
            <column name="update_time" type="timestamp"/>  
            <column name="tag" type="varchar(64)"/>
            <column name="date" type="varchar(10)"/>
            <column name="duration" type="bigint"/>
            <column name="times" type="bigint"/>
        </createTable>
    </changeSet>
    
    <changeSet id="7" author="wg">
        <createIndex tableName="t_count" indexName="idx_tag_date" unique="true">
            <column name="tag" type="varchar(64)"/>
            <column name="date" type="varchar(10)"/>        
        </createIndex>
    </changeSet>
        
    <changeSet id="8" author="wg">
        <dropColumn tableName="t_count" columnName="duration"/>
        <dropColumn tableName="t_count" columnName="times"/>
        <addColumn tableName="t_visit">
            <column name="number" type="bigint"/>
        </addColumn>
    </changeSet>    
    
    <changeSet id="9" author="wg">
        <dropColumn tableName="t_visit" columnName="number"/>
        <addColumn tableName="t_count">
            <column name="number" type="bigint"/>
        </addColumn>
    </changeSet>   
        
</databaseChangeLog> 
